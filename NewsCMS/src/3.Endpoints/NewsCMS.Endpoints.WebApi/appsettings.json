  "Swagger": {
    "Enabled": true,
    "SwaggerDoc": {
      "Version": "v1",
      "Title": "NewsCMS",
      "Name": "v1",
      "URL": "/swagger/v1/swagger.json"
    },
    "AllowedHosts": "*"
  },
  "spring": {
    "application": {
      "name": "NewsCMS"
    }
  },
  "eureka": {
    "client": {
      "serviceUrl": "http://localhost:8761/eureka/",
      "shouldFetchRegistry": "false",
      "shouldRegisterWithEureka": true,
